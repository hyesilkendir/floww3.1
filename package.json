{
  "name": "calafco-hesap-defteri",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint",
    "build:production": "set NODE_ENV=production && npm run validate && npm run build",
    "start:production": "set NODE_ENV=production && npm run start",
    "preview": "npm run build:production && npm run start:production",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "db:migrate:run": "tsx src/lib/db/migrate.ts",
    "db:migrate:fresh": "npm run db:drop && npm run db:generate && npm run db:migrate:run",
    "test:db": "node test-db-connection.js",
    "test:migration": "node test-migration.js",
    "setup": "npm install && cp env.example .env.local && npm run test:db",
    "deploy": "node deploy.js",
    "deploy:quick": "vercel --prod",
    "deploy:vercel": "npm run build:production && vercel --prod",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1",
    "clean": "rm -rf .next out dist",
    "reinstall": "rm -rf node_modules package-lock.json && npm install"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.57.4",
    "@types/jspdf": "^1.3.3",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.536.0",
    "mysql2": "^3.14.3",
    "next": "^14.2.18",
    "postgres": "^3.4.7",
    "react": "^18",
    "react-dom": "^18",
    "recharts": "^3.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint-config-next": "15.4.5",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.3",
    "typescript": "^5"
  }
}
